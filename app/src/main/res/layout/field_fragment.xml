<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.FieldFragment"
    >
    <include layout="@layout/bg_template"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="رشته تحصیلی"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/field_hum_btn"
        android:layout_marginBottom="100dp"
        android:textSize="@dimen/title_size"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/field_hum_btn"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:text="انسانی"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="50dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/field_elc_btn"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:text="برق"
        app:layout_constraintTop_toBottomOf="@id/field_hum_btn"
        app:layout_constraintStart_toStartOf="@id/field_hum_btn"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/logout_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/field_elc_btn"
        android:layout_marginTop="10dp"
        android:text="خروج از سیستم"
        android:linksClickable="true"
        android:clickable="true"
        android:focusable="true"
        />
</androidx.constraintlayout.widget.ConstraintLayout>