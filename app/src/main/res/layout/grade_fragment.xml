<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.GradeFragment"

    >

    <include layout="@layout/bg_template"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="پایه پتحصیلی"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/grade_10_btn"
        android:layout_marginBottom="100dp"
        android:textSize="@dimen/title_size"
    />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/grade_10_btn"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:text="دهم"
        app:layout_constraintBottom_toTopOf="@id/grade_11_btn"
        app:layout_constraintStart_toStartOf="@id/grade_11_btn"
        android:layout_marginBottom="20dp"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/grade_11_btn"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:text="یازدهم"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="50dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/grade_12_btn"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:text="دوازدهم"
        app:layout_constraintTop_toBottomOf="@id/grade_11_btn"
        app:layout_constraintStart_toStartOf="@id/grade_11_btn"
        android:layout_marginTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>