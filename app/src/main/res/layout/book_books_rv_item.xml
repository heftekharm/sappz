<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/book_books_rv_item_imageview_avatar"
        android:layout_width="@dimen/books_item_imageview_size"
        android:layout_height="@dimen/books_item_imageview_size"
        android:gravity="end"
        />

    <TextView
        android:id="@+id/book_books_rv_item_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        />

</LinearLayout>