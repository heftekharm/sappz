<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="5dp"
    android:background="#ffff"
    android:padding="10dp">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/book_books_rv_item_imageview_avatar"
        android:layout_width="@dimen/books_item_imageview_size"
        android:layout_height="@dimen/books_item_imageview_size"
        android:src="@drawable/book1256"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/book_books_rv_item_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="نام کتاب"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/book_books_rv_item_imageview_avatar"
        app:layout_constraintTop_toTopOf="@id/book_books_rv_item_imageview_avatar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/book_books_rv_item_textview_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":دبیر"
        app:layout_constraintStart_toStartOf="@id/book_books_rv_item_textview_name"
        app:layout_constraintTop_toBottomOf="@id/book_books_rv_item_textview_name" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/book_books_rv_item_textview_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:layout_marginLeft="6dp"
        app:layout_constraintStart_toEndOf="@id/book_books_rv_item_textview_teacher"
        app:layout_constraintTop_toTopOf="@id/book_books_rv_item_textview_teacher" />

</androidx.constraintlayout.widget.ConstraintLayout>