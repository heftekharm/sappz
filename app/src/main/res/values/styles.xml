<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/shabnam</item>
        <item name="textAppearanceButton">@style/myButtonTextAppearance</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>



    <style name="myButtonTextAppearance" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
    </style>
</resources>
